extends layout

block content
    
    if message
        p #{message}

    form(action="/edit_post_save/#{postId}", method="post")
        label(for="content") content : 
        input(type="text", name="content" , value="#{post.content}")
        br
        select(name="categoriesId")
            for category in categories
                option(value="#{category.categoriesId}") #{category.category_1} - #{category.category_2} - #{category.category_3} - #{category.category_4} 
        br
        button(type="submit") Save